rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // Users collection
    match /users/{userId} {
      // Users can read and write their own profile
      allow read, write: if isAuthenticated() && isOwner(userId);
    }
    
    // Leads collection
    match /leads/{leadId} {
      // Users can read their own leads
      allow read: if isAuthenticated() && 
        (resource == null || isOwner(resource.data.userId));
      
      // Users can create leads
      allow create: if isAuthenticated() && 
        request.resource.data.userId == request.auth.uid;
      
      // Users can update their own leads
      allow update: if isAuthenticated() && 
        isOwner(resource.data.userId) &&
        request.resource.data.userId == resource.data.userId;
      
      // Users can delete their own leads
      allow delete: if isAuthenticated() && isOwner(resource.data.userId);
    }
    
    // Activities collection
    match /activities/{activityId} {
      // Allow read/write for authenticated users
      // Activities are linked to leads via leadId, not userId
      allow read, write: if isAuthenticated();      
    }
    
    // Email Templates collection
    match /emailTemplates/{templateId} {
      // Users can read and write their own templates
      allow read, write: if isAuthenticated() && 
        (resource == null || isOwner(resource.data.userId));
      
      // Validate template data
      allow create: if isAuthenticated() &&
        request.resource.data.userId == request.auth.uid &&
        request.resource.data.name is string &&
        request.resource.data.subject is string &&
        request.resource.data.body is string;
    }
  }
}
