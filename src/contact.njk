{% block scripts %}
<script>
  (() => {
    const root = document.getElementById('contact-form-root');
    if (!root) return;
    const nameEl = root.querySelector('#qc-name');
    const emailEl = root.querySelector('#qc-email');
    const phoneEl = root.querySelector('#qc-phone');
    const needEl = root.querySelector('#qc-need');
      const previewEl = root.querySelector('#qc-preview');
    const prepareBtn = root.querySelector('#qc-prepare');
    const actionsCard = root.querySelector('#qc-actions-card');
    const actions = root.querySelector('#qc-actions');
    const smsBtn = root.querySelector('#qc-sms');
    const mailBtn = root.querySelector('#qc-mail');

    const updatePreview = () => {
      const body = buildBody();
      previewEl.textContent = body;
    };

    const buildBody = () => {
      const header = `Hi Will, this is ${nameEl.value || "[Your Name]"}.`;
      const contactLine = `Email: ${emailEl.value || "[your email]"} | Phone: ${phoneEl.value || "[your phone]"}`;
      const context = `Project Context / Needs:\n${needEl.value || "[Briefly describe your project, goals, and timeline]"}`;
      return `${header}\n${contactLine}\n${context}`;
    };

    [nameEl, emailEl, phoneEl, needEl].forEach((el) => {
      el.addEventListener('input', updatePreview);
    });

    prepareBtn.addEventListener('click', () => {
      const body = encodeURIComponent(buildBody());
      const smsHref = `sms:+18592678383?body=${body}`;
      const mailHref = `mailto:will@tctcusa.com?subject=Project%20Inquiry&body=${body}`;
      smsBtn.setAttribute('href', smsHref);
      mailBtn.setAttribute('href', mailHref);
      actionsCard.style.display = 'block';
    });
  })();
</script>
