{# NAVIGATION - The Pathways Between Frequencies #}
<nav class="main-nav">
  <div class="nav-container">
    
        <a href="/" class="nav-logo">
          <img src="/assets/logo.svg" alt="TCTC Logo" class="logo-image">
          <span class="logo-text" style="font-weight: 800; font-size: 1.3rem; color: #F8FAFC;">TCTC Business Suite</span>
        </a>
    
    {# Navigation Links - The Harmonic Series #}
    <ul class="nav-links">
      <li><a href="/" class="nav-link {% if page.url == '/' %}active{% endif %}">Home</a></li>
      <li><a href="/tools/" class="nav-link {% if '/tools/' in page.url %}active{% endif %}">Tools</a></li>
      <li><a href="/packages/" class="nav-link {% if '/packages/' in page.url %}active{% endif %}">Pricing</a></li>
      <li><a href="/about/" class="nav-link {% if '/about/' in page.url %}active{% endif %}">About</a></li>
      <li><a href="/contact/" class="nav-link-cta {% if '/contact/' in page.url %}active{% endif %}">Login</a></li>
    </ul>
    
    {# Mobile Menu Toggle #}
    <button class="mobile-menu-toggle" aria-label="Toggle menu">
      <span></span>
      <span></span>
      <span></span>
    </button>
    
  </div>
</nav>

{# Mobile Menu - Hidden by default #}
<div class="mobile-menu">
  <ul class="mobile-nav-links">
    <li><a href="/" class="mobile-nav-link">Home</a></li>
    <li><a href="/tools/" class="mobile-nav-link">Tools</a></li>
    <li><a href="/packages/" class="mobile-nav-link">Pricing</a></li>
    <li><a href="/about/" class="mobile-nav-link">About</a></li>
    <li><a href="/contact/" class="mobile-nav-link-cta">Login</a></li>
  </ul>
</div>

<script>
  // Simple mobile menu toggle - zero dependencies
  document.addEventListener('DOMContentLoaded', function() {
    const toggle = document.querySelector('.mobile-menu-toggle');
    const menu = document.querySelector('.mobile-menu');
    
    toggle.addEventListener('click', function() {
      menu.classList.toggle('active');
      toggle.classList.toggle('active');
    });
    
    // Close menu when link clicked
    const mobileLinks = document.querySelectorAll('.mobile-nav-link, .mobile-nav-link-cta');
    mobileLinks.forEach(link => {
      link.addEventListener('click', function() {
        menu.classList.remove('active');
        toggle.classList.remove('active');
      });
    });
  });
</script>
